# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key

# MailerSend Configuration
# Get API key from: https://www.mailersend.com/
# For testing, use trial domain: MS_xxxxx@trial-xxxxx.mlsender.net
MAILERSEND_API_KEY=mlsn.your_api_key_here
MAILERSEND_SENDER=MS_xxxxx@trial-xxxxx.mlsender.net

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL for CORS (in production, this will be your frontend's hosted URL)
FRONTEND_URL=http://localhost:8083